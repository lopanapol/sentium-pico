-- crazy-cat-viewer.p8
--
-- This cartridge displays the entire spritesheet
-- so you can identify the correct sprite numbers.
--
-- The number of each sprite is printed on top of it.

function _draw()
  cls(1) -- Dark blue background

  -- Loop through the entire spritesheet
  -- 16 sprites per row, 16 per column
  for i=0,255 do
    local x = (i % 16) * 8
    local y = flr(i / 16) * 8
    
    -- Draw a white box behind the number for readability
    rectfill(x, y, x + 7, y + 7, 7)
    
    -- Draw the sprite on top of the white box
    spr(i, x, y)
    
    -- Draw the sprite number, ensuring it's readable
    local text_col = 0 -- Black
    -- If the background is dark, use a light color
    if (pget(x + 1, y + 1) < 6) then
      text_col = 7 -- White
    end
    print(i, x + 1, y + 1, text_col)
  end
  
  print("NOTE THE NUMBER IN THE TOP-LEFT CORNER OF THE CAT", 0, 120, 7)
end

